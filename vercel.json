{
    "github": {
        "silent": true
    },
    "buildCommand": "npm --prefix frontend install && npm --prefix frontend run build",
    "outputDirectory": "frontend/dist",
    "installCommand": "npm --prefix backend install",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/v1/:path*",
            "destination": "/api/index"
        },
        {
            "source": "/api/:path((?!v1).*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}