{
    "version": 2,
    "buildCommand": "cd frontend && npm install && VITE_API_URL=/api npx vite build",
    "outputDirectory": "frontend/dist",
    "installCommand": "npm install && cd backend && npm install",
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "VITE_API_URL": "/api"
    }
}