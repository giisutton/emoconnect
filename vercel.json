{
    "buildCommand": "npm run build --prefix frontend",
    "outputDirectory": "frontend/dist",
    "installCommand": "npm install --prefix frontend && npm install --prefix backend",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/v1/:path*",
            "destination": "/api/index"
        },
        {
            "source": "/api/:path((?!v1).*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}