{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npx vite build",
    "outputDirectory": "frontend/dist",
    "installCommand": "npm install && cd backend && npm install",
    "rewrites": [
        {
            "source": "/api/v1/:path*",
            "destination": "/api"
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "/api"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}